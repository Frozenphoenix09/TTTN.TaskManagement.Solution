@page "/action-edit/{ActionId}"
@using TTTN.TaskManagement.WebApp.Components;

@if (action == null)
{
    <LoadingIndicator></LoadingIndicator>
}
else
{
    <h3>Edit @ActionId</h3>
    <EditForm Model=@action OnValidSubmit="UpdateAction">
        <DataAnnotationsValidator />
        <div class="row">
            <div class="form-group col-4">
                <label> Action Name</label>
                <br />
                <input type="text" class="form-control" @bind-value=action.ActionName>
                <ValidationMessage For="()=>action.ActionName"></ValidationMessage>
            </div>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Save</button>
    </EditForm>
}
