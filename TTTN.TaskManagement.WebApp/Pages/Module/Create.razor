@page "/module-create"
<h3>Create</h3>
<EditForm Model=@moduleViewModel  OnValidSubmit="CreateModule">
    <DataAnnotationsValidator/>
    <div class="row">
        <div class="form-group col-4">
            <label> Action Name</label>
            <br />
            <input type="text" class="form-control" @bind-value=moduleViewModel.ModuleName placeholder="Enter module name">
            <ValidationMessage For="()=>moduleViewModel.ModuleName"></ValidationMessage>
        </div>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</EditForm>

